extends layout
block content
    main
        header
            .navbar.navbar-inverse(role='navigation')
                .container
                    .navbar-header
                        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href='#') Finance Control

                    .navbar-collapse.collapse
                        form.navbar-form.navbar-right(role='form',method='post', action='login')
                            .form-group
                                input.form-control(type='text', name='login', placeholder='Login')
                            .form-group
                                input.form-control(type='password', name='password', placeholder='Password')
                            .form-group
                                button.btn.btn-success(type='submit') LogIn